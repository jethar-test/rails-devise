<div class="container">
	<h1>Courses we offer</h1>
	<table class="table table-hover">
	    <thead>
	        <tr>
	            <th>Program</th>
	            <th>Name</th>
	            <th>Duration</th>  
	            <th></th>         
	        </tr>
	    </thead>
	    <tbody>
	    	<% @courses.each do |course| %>
		    	<tr>
		            <td><%= course.code %></td>
		            <td><%= course.name %></td>
		            <td><%= course.duration %> semesters</td>
		            <% if current_user.type == "Student" %>
		            	<td><%= link_to "Enrol", 'https://www.google.com', class: "btn btn-primary"  %></td>   
		            <% else %> 
		            	<td><%= link_to "Edit", 'https://www.facebook.com', class: "btn btn-primary"  %></td> 
		            <% end %>    
		        </tr>
	    	<% end %>	       
	    </tbody>
	</table>
</div>