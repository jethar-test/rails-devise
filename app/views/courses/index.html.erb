<div class="container">
	<h1>Courses we offer</h1>
	<table class="table table-hover">
	    <thead>
	        <tr>
	            <th>Program</th>
	            <th>Name</th>
	            <th>Duration</th>  
	            <th></th>         
	        </tr>
	    </thead>
	    <tbody>
	    	<% @courses.each do |course| %>
		    	<tr>
		            <td><%= course.code %></td>
		            <td><%= course.name %></td>
		            <td><%= course.duration %> semesters</td>
		            <% if student_signed_in %>
		            	<td><%= link_to "Enroll", new_user_registration_path + "?type=Student", class: "btn btn-primary"  %></td>    
		            <% end %>    
		        </tr>
	    	<% end %>	       
	    </tbody>
	</table>
</div>