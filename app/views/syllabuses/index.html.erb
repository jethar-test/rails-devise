<div class="container">
	<h1><%= "#{@course.code} " "#{@course.name}"%></h1>
	<table class="table table-hover">
	    <thead>
	        <tr>
	            <th>Code</th>
	            <th>Semester</th>
	            <th>Name</th>  
	            <th></th>
	            <th></th>         
	        </tr>
	    </thead>
	    <tbody>
	    	<% @syllabuses.each do |syllabus| %>
		    	<tr>
		            <td><%= syllabus.code %></td>
		            <td><%= syllabus.semester %></td>
		            <td><%= syllabus.name %></td>
		            <% if current_user.type == "Student" %>
		            	<td></td>   
		            <% else %> 

		            	<td><%= link_to "Edit", edit_course_syllabus_path(@course,syllabus), class: "btn btn-primary"  %></td> 
		            	<td><%= link_to "Delete", course_syllabus_path(@course,syllabus), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td> 
		            <% end %>    
		        </tr>
	    	<% end %>	       
	    </tbody>
	</table>
		<%= link_to "Back", courses_path, class: "btn btn-default"  %>

	 <% if current_user.type == "Professor" %>
		<%= link_to "Create New Syllabus", new_course_syllabus_path(@course), class: "btn btn-primary"  %>
	<% end %>
</div>